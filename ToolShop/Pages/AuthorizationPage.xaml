<Page x:Class="ToolShop.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToolShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Style="{StaticResource CommonBlock}" Text="Логин"/>
                <TextBox Style="{StaticResource CommonTextBox}" x:Name="loginBox"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Style="{StaticResource CommonBlock}" Text="Пароль"/>
                <PasswordBox Style="{StaticResource CommonPasswordBox}" x:Name="passwordBox"/>
            </StackPanel>
            <Button Style="{StaticResource CommonButton}" Name="loginButton" Content="Войти" Click="loginButton_Click"/>
            <Button Style="{StaticResource CommonButton}" Name="guestButton" Content="Войти как гость" Click="guestButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
